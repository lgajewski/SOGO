<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.edu.agh.sogo.MainFragment"
    tools:ignore="ContentDescription">

    <fragment
        android:id="@+id/fragment_maps"
        android:name="pl.edu.agh.sogo.maps.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/shape_rounded_bar"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_container">

        <ImageButton
            android:id="@+id/button_info_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_info_details"
            style="@style/TabbedImageButton"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorShadow"
            style="@style/TabbedImageButton" />

        <ImageButton
            android:id="@+id/button_compass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_compass"
            style="@style/TabbedImageButton"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorShadow" />

        <ImageButton
            android:id="@+id/button_directions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_directions"
            style="@style/TabbedImageButton" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorShadow" />

        <ImageButton
            android:id="@+id/button_goto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_goto"
            style="@style/TabbedImageButton"/>
    </LinearLayout>


</RelativeLayout>
